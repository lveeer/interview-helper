# ==================== 数据库配置 ====================
POSTGRES_USER=interview
POSTGRES_PASSWORD=interview123
POSTGRES_DB=interview_helper

# ==================== JWT 配置 ====================
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# ==================== LLM 配置 ====================
# LiteLLM 配置（统一 API 接口）
LITELLM_MODEL=dashscope/qwen-turbo
LITELLM_API_KEY=your-dashscope-api-key
LITELLM_API_BASE=

# iFlow API 配置
IFLOW_API_KEY=your-iflow-api-key
IFLOW_API_URL=https://apis.iflow.cn/v1/chat/completions
IFLOW_MODEL=tstars2.0

# 通义千问配置
DASHSCOPE_API_KEY=your-dashscope-api-key

# 文心一言配置
ERNIE_API_KEY=your-ernie-api-key
ERNIE_SECRET_KEY=your-ernie-secret-key

# OpenAI 配置
OPENAI_API_KEY=your-openai-api-key

# ==================== Ollama 配置 ====================
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large
OLLAMA_LLM_MODEL=qwen2.5

# ==================== RAG 配置 ====================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K=5
ENABLE_QUERY_EXPANSION=true
QUERY_EXPANSION_COUNT=3
ENABLE_HYBRID_SEARCH=true
ENABLE_RERANKING=true
RERANK_TOP_K=10

# ==================== 文件上传配置 ====================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.docx,.doc

# ==================== CORS 配置 ====================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000