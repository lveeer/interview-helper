# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/interview_helper
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=interview_helper

# JWT 配置
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM 配置 (使用 litellm)
# 格式: provider/model_name
# 示例: openai/gpt-4, claude/claude-3, azure/gpt-35-turbo, etc.
LITELLM_MODEL=qwen/qwen-turbo
LITELLM_API_KEY=your-api-key
LITELLM_API_BASE=  # 可选，自定义 API 端点

# 通义千问 (litellm 会自动处理)
DASHSCOPE_API_KEY=your-dashscope-api-key

# 文心一言 (litellm 会自动处理)
ERNIE_API_KEY=your-ernie-api-key
ERNIE_SECRET_KEY=your-ernie-secret-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.docx,.doc

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 向量数据库配置
VECTOR_DIMENSION=1536
EMBEDDING_MODEL=text-embedding-ada-002

# RAG 配置
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K=5