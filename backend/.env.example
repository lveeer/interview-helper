# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/interview_helper
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=interview_helper

# JWT 配置
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# LLM 配置 (使用 litellm)
# 格式: provider/model_name
# 示例: openai/gpt-4, claude/claude-3, azure/gpt-35-turbo, etc.
LITELLM_MODEL=qwen/qwen-turbo
LITELLM_API_KEY=your-api-key
LITELLM_API_BASE=  # 可选，自定义 API 端点

# iFlow API 配置
IFLOW_API_KEY=your-iflow-api-key
IFLOW_API_URL=https://apis.iflow.cn/v1/chat/completions
IFLOW_MODEL=tstars2.0

# 通义千问配置（litellm 会自动使用）
DASHSCOPE_API_KEY=your-dashscope-api-key

# 文心一言配置（litellm 会自动使用）
ERNIE_API_KEY=your-ernie-api-key
ERNIE_SECRET_KEY=your-ernie-secret-key

# OpenAI 配置
OPENAI_API_KEY=your-openai-api-key

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.pdf,.docx,.doc

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Ollama 配置
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=qwen3-embedding:4b
OLLAMA_LLM_MODEL=qwen2.5

# 向量数据库配置
VECTOR_DIMENSION=2560
EMBEDDING_MODEL=ollama
EMBEDDING_PROVIDER=ollama  # 可选: ollama, openai, litellm

# RAG 配置
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K=5

# RAG 优化配置
ENABLE_QUERY_EXPANSION=true  # 启用查询扩展
QUERY_EXPANSION_COUNT=3  # 查询扩展数量
ENABLE_HYBRID_SEARCH=true  # 启用混合检索
ENABLE_RERANKING=true  # 启用重排序
RERANK_TOP_K=10  # 重排序候选数量